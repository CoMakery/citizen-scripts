#! /usr/bin/env ruby

require_relative '../lib/citizen_code_scripts'

script = ARGV.first

if ARGV.size == 0
  CitizenCodeScripts::Help.run
elsif CitizenCodeScripts::Base.script_names.include?(script)
  CitizenCodeScripts::Base
    .scripts[script]
    .run(*ARGV[1 .. -1])
else
  puts "Script '#{script}' not recognized"
  help
end
